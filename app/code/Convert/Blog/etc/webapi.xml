<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/post/get-list" method="GET">
        <service class="Convert\Blog\Api\GetPostListInterface" method="execute"/>
        <resources>
            <resource ref="Convert_Blog::management"/>
        </resources>
    </route>
    <route url="/V1/post/save" method="POST">
        <service class="Convert\Blog\Api\SavePostInterface" method="execute"/>
        <resources>
            <resource ref="Convert_Blog::management"/>
        </resources>
    </route>
    <route url="/V1/post/:entityId" method="DELETE">
        <service class="Convert\Blog\Api\DeletePostByIdInterface" method="execute"/>
        <resources>
            <resource ref="Convert_Blog::management"/>
        </resources>
    </route>
    <route url="/V1/category/get-list" method="GET">
        <service class="Convert\Blog\Api\GetCategoryListInterface" method="execute"/>
        <resources>
            <resource ref="Convert_Blog::management"/>
        </resources>
    </route>
    <route url="/V1/category/save" method="POST">
        <service class="Convert\Blog\Api\SaveCategoryInterface" method="execute"/>
        <resources>
            <resource ref="Convert_Blog::management"/>
        </resources>
    </route>
    <route url="/V1/category/:entityId" method="DELETE">
        <service class="Convert\Blog\Api\DeleteCategoryByIdInterface" method="execute"/>
        <resources>
            <resource ref="Convert_Blog::management"/>
        </resources>
    </route>
</routes>
